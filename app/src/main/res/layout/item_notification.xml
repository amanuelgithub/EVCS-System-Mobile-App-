<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="20dp"
    android:layout_margin="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="PN= "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/location_text_view"
            app:layout_constraintStart_toEndOf="@+id/location_text_view" />

        <TextView
            android:id="@+id/plate_no_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="204314"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/textView11" />

        <TextView
            android:id="@+id/vehicle_code_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="CD= "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/plate_no_text_view" />

        <ImageView
            android:id="@+id/location_image_view"
            android:layout_width="31dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_location_on" />

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:text="Adama, Bole"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="18dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/vehicle_speed_text_view"
            app:layout_constraintEnd_toStartOf="@+id/vehicle_speed_text_view"
            app:layout_constraintTop_toTopOf="@+id/vehicle_speed_text_view"
            app:srcCompat="@drawable/ic_baseline_directions_car" />

        <TextView
            android:id="@+id/vehicle_speed_text_view"
            android:layout_width="26dp"
            android:layout_height="15dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="68dp"
            android:text="70km"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="15dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView16"
            app:layout_constraintEnd_toStartOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/textView16"
            app:srcCompat="@drawable/ic_baseline_timelapse" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:layout_marginStart="32dp"
            android:text="25 min ago"
            app:layout_constraintBaseline_toBaselineOf="@+id/vehicle_speed_text_view"
            app:layout_constraintStart_toEndOf="@+id/vehicle_speed_text_view" />

        <ImageView
            android:id="@+id/more_image_view"
            android:layout_width="33dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_more_vert_24" />

        <View
            android:id="@+id/view2"
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="52dp"
            android:background="#C5C5C5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>